# =================================
# MONOPOLY EXPRESS - CONFIGURAÇÕES
# =================================

# Configurações do Servidor
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Configurações de Email SMTP (Gmail)
# Para Gmail, você precisa criar uma "senha de app" nas configurações de segurança
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app-16-caracteres

# Configurações do Banco de Dados SQLite
DATABASE_URL=./database/monopoly_express.db

# Configurações de Segurança
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_com_pelo_menos_32_caracteres
BCRYPT_ROUNDS=12

# Configurações do Mercado Pago
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
# IMPORTANTE: Use credenciais de TEST em desenvolvimento
MP_ACCESS_TOKEN=TEST-1234567890-123456-1234567890abcdef1234567890abcdef-123456789
MP_PUBLIC_KEY=TEST-12345678-1234-1234-1234-123456789012
MP_SUBSCRIPTION_PLAN_ID=monopoly-express-premium

# APIs Externas (Opcionais)
GOOGLE_MAPS_API_KEY=sua-chave-do-google-maps

