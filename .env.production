# =================================
# MONOPOLY EXPRESS - PRODUÇÃO
# =================================

# Configurações do Servidor
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://monopoly-express.vercel.app

# Configurações de Email SMTP
# IMPORTANTE: Configure com suas credenciais reais
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app-16-caracteres

# Configurações do Banco de Dados
DATABASE_URL=/app/data/monopoly_express.db

# Configurações de Segurança
# IMPORTANTE: Gere uma chave secreta forte
JWT_SECRET=sua_chave_secreta_super_forte_com_pelo_menos_64_caracteres_para_producao
BCRYPT_ROUNDS=12

# Configurações do Mercado Pago
# IMPORTANTE: Use credenciais de PRODUÇÃO
MP_ACCESS_TOKEN=APP_USR-seu-access-token-de-producao
MP_PUBLIC_KEY=APP_USR-sua-public-key-de-producao
MP_CLIENT_ID=seu-client-id
MP_CLIENT_SECRET=seu-client-secret
MP_SUBSCRIPTION_PLAN_ID=monopoly-express-premium

# APIs Externas
GOOGLE_MAPS_API_KEY=sua-chave-do-google-maps

# Configurações de CORS
ALLOWED_ORIGINS=https://monopoly-express.vercel.app,https://www.monopoly-express.com

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

